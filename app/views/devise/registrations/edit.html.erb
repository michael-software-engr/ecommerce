<!-- ... edited by app gen (Devise views) -->

<% provide :title, "Update **#{current_user.email}**" %>

<div id="devise">
  <%- model_class = User -%>

  <div id="unit">
    <div id="title">
      <h2>
        <%= t '.title', default: [:'helpers.titles.edit', 'Edit %{model}'],
              model: model_class.model_name.human.titleize %>
      </h2>
    </div>

    <hr>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                           html: { class: 'form-horizontal user', method: :put }) do |f| %>

      <%= render 'devise/shared/form_errors', resource: @user %>

      <div class="form-group">
        <%= f.label :email, class: 'control-label col-md-4' %>
        <div class="col-md-7">
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :name, class: 'control-label col-md-4' %>
        <div class="col-md-7">
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'control-label col-md-4' %>
        <div class="col-md-7">
          <%= f.password_field :password, class: 'form-control',
                               autocomplete: 'off', placeholder: 'Must enter password' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: 'control-label col-md-4' %>
        <div class="col-md-7">
          <%= f.password_field :password_confirmation, class: 'form-control',
                               autocomplete: 'off' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :current_password, class: 'control-label col-md-4' %>
        <div class="col-md-7">
          <%= f.password_field :current_password, class: 'form-control',
                               autocomplete: 'off',
                               placeholder: 'We need your current password to confirm your changes' %>
        </div>
      </div>

      <hr>
      <div class="form-group">
        <div class="col-md-offset-4 col-md-7">
          <%= f.submit 'Save', class: 'btn btn-primary' %>
          <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                    root_path, class: 'btn btn-default' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-4 col-md-5">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>

    <div id="cancel_account" class="col-md-offset-4 col-md-7">
      <%= button_to "Cancel my account", registration_path(resource_name),
                    data: { confirm: "Are you sure?" }, method: :delete,
                    form_class: 'form-horizontal',
                    id: 'crap',
                    class: 'btn btn-danger' %>
    </div>
  </div>
</div>
