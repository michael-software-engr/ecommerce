<!-- ... edited by app gen (Devise views) -->

<% provide :title, 'Log In' %>

<div id="devise">
  <%- model_class = User -%>
  <div id="unit">
    <div id="title">
      <h2>
        <%= t '.title', default: ['Log in'], model: model_class.model_name.human.titleize %>
      </h2>
    </div>

    <hr>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                           html: { class: 'form-horizontal user' }) do |f| %>
      <%= render 'devise/shared/form_errors', resource: @user %>

      <div class="form-group">
        <%= f.label :email, class: 'control-label col-md-offset-1 col-md-2' %>
        <div class="col-md-7">
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'control-label col-md-offset-1 col-md-2' %>
        <div class="col-md-7">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, class: 'form-control',
                               autocomplete: 'off', placeholder: @placeholder %>
        </div>
      </div>

      <hr>
      <div class="form-group">
        <div class="col-md-offset-3 col-md-5">
          <%= f.submit 'Log in', class: 'btn btn-primary' %>
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    root_path, class: 'btn btn-default' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-3 col-md-7">
          <%= render 'devise/shared/links' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
