<!-- ... edited by app gen (layout) -->

<footer id="more_info">
  <div class="container">
    <div class="row">
      <% [
        contact,
        what_we_do,
        resources,
        about_us
      ].each do |more_info| %>
        <div class="col-xs-3">
          <%= more_info.title %>
          <hr>
          <ol class="list-unstyled">
            <% more_info.links.each do |link| %>
              <li><%= link_to link.text, link.path, data: { turbolinks: false } %></li>
            <% end -%>
          </ol>
        </div>
      <% end -%>
    </div>

    <hr>

    <dir id="last_row" class="row">
      <div class="col-lg-12">
        <ul class="list-inline banner-social-buttons pull-left">
          <li>
            <a href="<%= ApplicationHelper::App::TWITTER %>" class="btn btn-default btn-lg">
              <i class="fa fa-twitter fa-fw"></i>
              <span class="network-name">Twitter</span>
            </a>
          </li>

          <li>
            <a href="<%= ApplicationHelper::App::GITHUB %>" class="btn btn-default btn-lg">
              <i class="fa fa-github fa-fw"></i>
              <span class="network-name">Github</span>
            </a>
          </li>

          <li>
            <a href="<%= ApplicationHelper::App::GOOGLE_PLUS %>" class="btn btn-default btn-lg">
              <i class="fa fa-google-plus fa-fw"></i>
              <span class="network-name">Google+</span>
            </a>
          </li>
        </ul>

        <span class="pull-right">
          Copyright &copy; <%= ApplicationHelper::App::TITLE %> <%= Time.zone.now.year %>
        </span>
      </div>
    </dir>
  </div>
</footer>
