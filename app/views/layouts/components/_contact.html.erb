<section id="contact" class="container content-section text-center">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <h2>Contact <%= ApplicationHelper::App::TITLE %></h2>

      <p>Feel free to email us to provide feedback on our products and services!</p>

      <p><a href="mailto:feedback@example.com">feedback@example.com</a>

      <p>
        <% path_of_map = current_page?(root_path) ? '' : root_path %>
        <%= link_to 'Street address and map', "#{path_of_map}#map" %>
      </p>

      </p>
        <ul class="list-inline banner-social-buttons">
          <li>
            <a href="<%= ApplicationHelper::App::TWITTER %>" class="btn btn-default btn-lg">
              <i class="fa fa-twitter fa-fw"></i>
              <span class="network-name">Twitter</span>
            </a>
          </li>

          <li>
            <a href="<%= ApplicationHelper::App::GITHUB %>" class="btn btn-default btn-lg">
              <i class="fa fa-github fa-fw"></i>
              <span class="network-name">Github</span>
            </a>
          </li>

          <li>
            <a href="<%= ApplicationHelper::App::GOOGLE_PLUS %>" class="btn btn-default btn-lg">
              <i class="fa fa-google-plus fa-fw"></i>
              <span class="network-name">Google+</span>
            </a>
          </li>
        </ul>
    </div>
  </div>
</section>
