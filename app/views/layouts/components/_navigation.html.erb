<!-- ... edited by app gen (layout) -->

<nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
        <i class="fa fa-bars"></i>
      </button>

      <%= link_to path_or_id(root_path, 'page-top', append_id_to_path: false),
            class: 'navbar-brand page-scroll',
            data: { turbolinks: false } do %>
        <%= content_tag :i, nil, class: 'fa fa-money' %>

        <%= content_tag :span, ApplicationHelper::App::FIRST_WORD, class: 'light' %> <%= ApplicationHelper::App::REST_OF_WORDS %>
      <% end %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
      <ul class="nav navbar-nav">
        <!--  Hidden li included to remove active class from
              about link when scrolled up past about section -->
        <li class="hidden"><a href="#page-top"></a></li>

        <li><%= render partial: 'layouts/components/page_scroll_link', locals: {
                  text: 'About', path: path_or_id(root_path, 'about')
                } %></li>

        <li><%= render partial: 'layouts/components/page_scroll_link', locals: {
                  text: 'Products' , path: path_or_id(products_path, 'page-top', append_id_to_path: false)
                } %></li>

        <li><%= render partial: 'layouts/components/page_scroll_link', locals: {
                  text: 'Services', path: path_or_id(root_path, 'services')
                } %></li>

        <li><a class="page-scroll" href="#more_info">More Info</a></li>

        <%= render partial: 'layouts/components/user' %>
      </ul>
    </div>
    <!-- /.navbar-collapse -->
  </div>
  <!-- /.container -->
</nav>
